---
import "@fontsource-variable/nunito";

import BaseLayout from "$layouts/BaseLayout.astro";
import Logo from "./_logo-3.png";
import Modes from "./_modes.png";
import { ArrowDown, Twitter } from "lucide-svelte";
import CountDown from "$components/CountDown.svelte";
import LocalTime from "$components/LocalTime.svelte";
import Accordion from "./_Accordion.svelte";

const dates = {
  warmup: new Date("2024-04-06T21:30:00Z"),
  main: new Date("2024-04-06T22:00:00Z"),
  afterparty: new Date("2024-04-07T00:00:00Z"),
};
---

<BaseLayout title="Super Streamer Lobby 3">
  <div class="flex flex-col ssl-bg w-screen px-2 items-center">
    <header class="relative h-screen grid place-content-center max-w-4xl">
      <div class="flex flex-col items-center">
        <img
          src={Logo.src}
          alt="Super Streamer Lobby 3"
          style="filter: drop-shadow(-14px 14px 0px hsla(0, 0%, 0%, 25%));"
        />
        <div>
          <p class="px-7 text-2xl text-center max-md:text-lg">
            The community event featuring over 200 streamers and their viewers
            battling it out in one TETR.IO match.
          </p>
        </div>
        <div
          class="bg-white rounded shadow-xl px-4 py-2 text-2xl w-fit mt-5 flex flex-col items-center whitespace-nowrap max-sm:text-base"
        >
          <p class="font-bold ssl-hyper-text drop-shadow shadow-dark">
            <CountDown date={dates.main} client:load />
          </p>
          <p class="text-zinc-600 text-sm max-sm:text-xs">
            <LocalTime
              date={dates.main}
              options={{
                weekday: "long",
                month: "long",
                day: "numeric",
                hour: "numeric",
                minute: "2-digit",
                timeZoneName: "shortGeneric",
              }}
              client:load
            />
          </p>
        </div>
      </div>
      <a
        class="absolute bottom-8 left-1/2 -translate-x-1/2 bg-white shadow rounded-full p-1"
        href="#about"
      >
        <ArrowDown size="2rem" />
      </a>
    </header>
    <!-- Main event info -->
    <section class="contents">
      <!-- Agenda bullets -->
      <div id="about" class="max-w-4xl w-full flex gap-2 max-md:flex-wrap">
        <div class="flex flex-col">
          <p class="font-extrabold text-5xl ssl-hyper-text">16 Games</p>
          <ul class="font-bold">
            <li class="text-xl">8 Standard Games</li>
            <li class="text-xl">8 Custom Modes</li>
          </ul>
        </div>
      </div>
      <!-- Game modes -->
      <div
        class="ssl-dynamic-scale relative w-full py-20 my-7"
        style={{
          "--width": `${Modes.width}px`,
          "--height": `${Modes.height}px`,
          height: "calc(var(--height)/var(--scale))",
        }}
      >
        <div
          class="ssl-scrolling-banner absolute h-full w-[calc(120vw)] top-0 -left-10 -rotate-6"
          style={{
            backgroundImage: `url('${Modes.src}')`,
            backgroundSize:
              "calc(var(--width)/var(--scale)) calc(var(--height)/var(--scale))",
            backgroundRepeat: "repeat-x",
            backgroundPositionY: "center",
            filter: "drop-shadow(-7px 7px 4px hsla(0, 0%, 0%, 25%))",
          }}
        >
        </div>
      </div>
      <!-- Players Stats -->
      <div class="max-w-4xl w-full flex items-end flex-col text-right">
        <ul class="font-bold">
          <li class="text-xl">Streamers and Viewers totalling</li>
        </ul>
        <p class="font-extrabold text-5xl ssl-hyper-text">300+ Players</p>
      </div>
    </section>
    <div class="my-10"></div>
    <!-- Secondary events -->
    <div class="grid grid-cols-2 max-lg:grid-cols-1 gap-2 max-lg:gap-10">
      <section class="contents">
        <div class="mx-2 w-full max-w-xl">
          <h2 class="font-extrabold text-3xl ssl-hyper-text mb-2">
            Event Schedule
          </h2>
          <Accordion {dates} client:idle />
        </div>
      </section>
      <!-- Involed -->
      <section class="contents">
        <div class="mx-2 w-full max-w-xl">
          <h2 class="font-extrabold text-3xl ssl-hyper-text mb-2">
            Streamers Involved
          </h2>
          <div class="bg-white shadow rounded p-5">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Nostrum
            numquam velit aspernatur excepturi incidunt ea ducimus dolor
            temporibus dolorum eaque laboriosam fugiat voluptate fuga sunt,
            deleniti, esse aut aliquid facere.
          </div>
        </div>
      </section>
    </div>
    <section class="contents">
      <div class="max-w-4xl w-full flex justify-center my-20">
        <a
          class="flex gap-2 bg-blue-200 p-2 rounded text-blue-900 shadow font-bold"
          href="https://twitter.com/wyliecanttwitta/"
          target="_blank"
          rel="noopener noreferrer"><Twitter /> Contact Wylie</a
        >
      </div>
    </section>
  </div>
</BaseLayout>

<style lang="postcss">
  :global(.body) {
    @apply font-semibold;
    font-family: "Nunito Variable", sans-serif;
  }

  .ssl-bg {
    background: hsl(262, 100%, 73%);
    background: linear-gradient(
      155deg,
      hsl(339, 100%, 75%) 0%,
      hsl(38, 100%, 75%) 50%,
      hsl(262, 100%, 73%) 100%
    );
  }

  .ssl-hyper-text {
    color: transparent;
    background: linear-gradient(
      90deg,
      hsl(339, 100%, 60%) 0%,
      hsl(38, 100%, 50%) 50%,
      hsl(262, 100%, 60%) 100%
    );
    background-repeat: repeat-x;
    background-clip: text;
    filter: drop-shadow(1.5px 1.5px white) drop-shadow(-1.5px -1.5px white)
      drop-shadow(1.5px -1.5px white) drop-shadow(-1.5px 1.5px white);
  }

  .ssl-hyper-text.shadow-dark {
    filter: drop-shadow(0px 0px 4px hsla(0, 0, 0, 10%));
  }

  .ssl-dynamic-scale {
    --scale: 3;
  }

  @media not all and (min-width: 920px) {
    .ssl-dynamic-scale {
      --scale: 4;
    }
  }

  @keyframes background-scroll {
    0% {
      background-position-x: 0px;
    }
    100% {
      background-position-x: var(--width);
    }
  }

  .ssl-scrolling-banner {
    animation: background-scroll 42s linear infinite;
  }

  @media not all and (min-width: 768px) {
    .ssl-scrolling-banner {
      animation: background-scroll 56s linear infinite;
    }
  }
</style>
